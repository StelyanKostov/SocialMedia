@using Microsoft.AspNetCore.Identity
@using SocialMedia.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<div class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        
        <div class="nav-item dropdown">
            <a href="#" data-toggle="dropdown" class="nav-item nav-link dropdown-toggle user-action"><img src="@ViewBag.Avatar" class="avatar" alt="Avatar">@User.Identity.Name! <b class="caret"></b></a>
            <div class="dropdown-menu">
                <a href="#" class="dropdown-item"><i class="fa fa-user-o"></i> Profile</a>
                <a href="#" class="dropdown-item"><i class="fa fa-calendar-o"></i> Calendar</a>
                <a asp-area="Identity" asp-page="/Account/Manage/Index" class="dropdown-item"><i class="fa fa-sliders"></i> Settings</a>
                <div class="divider dropdown-divider"></div>
                @*<a asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" class="dropdown-item"><i class="material-icons">&#xE8AC;</i> Logout</a>*@
                <form class="dropdown-item" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                </form>
            </div>
        </div>

    }
    else
    {
        <a asp-area="Identity" asp-page="/Account/Register" class="nav-item nav-link"><i class="fas fa-plus-square"></i><span>Регистрация</span></a>
        <a asp-area="Identity" asp-page="/Account/Login" class="nav-item nav-link"><i class="fas fa-sign-in-alt"></i><span>Влез</span></a>

    }
</div>
